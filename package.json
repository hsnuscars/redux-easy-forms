{
  "name": "redux-easy-forms",
  "version": "0.1.6",
  "description": "REForms: A React-Redux forms library for the people!",
  "keywords": [
    "form",
    "forms",
    "fields",
    "inputs",
    "react",
    "redux",
    "react-bootstrap",
    "validations",
    "filters"
  ],
  "author": "Peter Morawiec",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/moarwick/redux-easy-forms"
  },
  "bugs": "https://github.com/moarwick/redux-easy-forms/issues",
  "scripts": {
    "start": "webpack-dev-server --content-base src/demos/",
    "build": "rimraf public && node_modules/webpack/bin/webpack.js --progress --profile --colors",
    "dist": "node_modules/webpack/bin/webpack.js --config webpack.dist.js",
    "docs": "node_modules/jsdoc-to-markdown/bin/cli.js -t docsTemplate.hbs src/REFormsAPI.js > _api.md",
    "prepublish": "npm run dist",
    "test": "NODE_ENV=test mocha --watch --compilers js:babel-core/register test/*.spec.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "array-includes"
    ]
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "react/jsx-key": 1,
      "react/jsx-uses-react": 1,
      "react/no-string-refs": 1,
      "react/prefer-es6-class": 1,
      "react/react-in-jsx-scope": 1
    },
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
      "jsx": true
    },
    "globals": {
      "describe": true,
      "expect": true,
      "it": true
    },
    "plugins": [
      "react"
    ]
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "babel-core": "6.7.7",
    "babel-eslint": "6.0.3",
    "babel-loader": "6.2.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "chai": "3.5.0",
    "css-loader": "0.23.1",
    "eslint-plugin-react": "5.0.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-webpack-plugin": "2.9.0",
    "jsdoc-to-markdown": "1.3.4",
    "mocha": "2.4.5",
    "node-sass": "3.5.1",
    "postcss-loader": "0.8.2",
    "react": "15.0.1",
    "react-bootstrap": "0.29.0",
    "react-dom": "15.0.1",
    "react-hot-loader": "1.3.0",
    "react-redux": "4.4.5",
    "redux": "3.5.1",
    "rimraf": "2.5.2",
    "sass-loader": "3.2.0",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "validator": "5.0.0",
    "webpack": "1.13.0",
    "webpack-dev-server": "1.14.1",
    "webpack-merge": "0.12.0"
  }
}
